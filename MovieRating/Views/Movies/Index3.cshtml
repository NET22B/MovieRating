@model IndexViewModel2
@inject IGenreSelectListService service

@{
    ViewData["Title"] = "Index";
}

<h1>Index3</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Filter3" asp-controller="Movies" method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" asp-for="Title" placeholder="Search on title..." />
        <div class="input-group-append">
            <select class="form-control" asp-for="Genre" asp-items="@await service.GetGenresAsync()">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search">&emsp;Search</i></button>
        </div>
    </div>
</form>

<partial name="MoviesPartial" model="@Model.Movies" />